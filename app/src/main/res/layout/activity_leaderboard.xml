<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leaderboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.akhlak.quizapp.Leaderboard">


    <TextView
        android:text="1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvfirst" />

    <TextView
        android:text="2nd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvfirst"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/tvsecond" />

    <TextView
        android:text="3rd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvsecond"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/tvthird" />

    <TextView
        android:text="4th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvthird"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:id="@+id/tvfourth" />

    <TextView
        android:text="5th"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvfourth"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:id="@+id/tvfifth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvsecond"
        android:layout_marginStart="44dp"
        android:id="@+id/tvfirstplace"
        android:text="TextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvsecondplace"
        android:layout_alignBaseline="@+id/tvsecond"
        android:layout_alignBottom="@+id/tvsecond"
        android:layout_alignStart="@+id/tvfirstplace" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvsecondplace"
        android:layout_alignStart="@+id/tvfirstplacescore"
        android:id="@+id/tvsecondplacescore" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvthird"
        android:layout_alignStart="@+id/tvsecondplace"
        android:id="@+id/tvthirdplace" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvthirdplace"
        android:layout_alignStart="@+id/tvsecondplacescore"
        android:id="@+id/tvthirdplacescore" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvthirdplacescore"
        android:id="@+id/tvfourthplacescore"
        android:layout_alignTop="@+id/tvfourthplace" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvfourthplace"
        android:layout_alignBaseline="@+id/tvfourth"
        android:layout_alignBottom="@+id/tvfourth"
        android:layout_alignStart="@+id/tvthirdplace" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvfifth"
        android:layout_alignStart="@+id/tvfourthplace"
        android:id="@+id/tvfifthplace" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvfourthplacescore"
        android:id="@+id/tvfifthplacescore"
        android:layout_alignTop="@+id/tvfifthplace" />

    <Button
        android:text="Back To Main Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/bLeaderboardMainMenu"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvfirstplacescore"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="77dp" />
</RelativeLayout>
